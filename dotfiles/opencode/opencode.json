{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "permission": {
    "edit": "ask",
    "bash": "ask"
  },
  "keybinds": {
    "messages_half_page_up": "{",
    "messages_half_page_down": "}"
  },
  "mcp": {
    "mcp-obsidian": {
      "type": "local",
      "command": ["uvx", "mcp-obsidian"],
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": false
    }
  }
}
