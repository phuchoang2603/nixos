{
  "layer": "top",
  "position": "top",
  "spacing": 0,
  "height": 0,
  "output": "HDMI-A-1",

  "margin-top": 2,

  "modules-left": ["clock", "custom/todoist", "custom/docker"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": ["mpris", "tray", "group/system"],

