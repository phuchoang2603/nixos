  "group/system": {
    "orientation": "inherit",
    "modules": ["cpu", "memory", "pulseaudio", "battery"],
  },
  "mpris": {
    "format": "{status_icon} {dynamic}",
    "dynamic-len": 15,
    "dynamic-separator": " - ",
    "dynamic-order": ["title", "artist", "album"],
